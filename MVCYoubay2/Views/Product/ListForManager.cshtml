
@model IEnumerable<MVCYoubay2.Models.t_product>
@*@RenderPage("../Shared/_Admin.cshtml")
@{
    ViewBag.Title = "Lister";
}*@

<p>
    <h2>Liste des Produits</h2>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.productName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.productDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.sellerPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.subcategory_subcategoryId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.quantityAvailable)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.productImage)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.productName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.productDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.sellerPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.subcategory_subcategoryId)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.quantityAvailable)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.productImage)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.productId }) |
                @Html.ActionLink("Details", "Details", new { id = item.productId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.productId })
            </td>
        </tr>
    }

</table>
